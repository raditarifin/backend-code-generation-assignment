{
  "scripts": {
    "start": "ts-node src/app.ts",
    "dev": "nodemon --exec ts-node src/app.ts",
    "build": "tsc --build",
    "clean": "tsc --build --clean"
  },
  "nodemonConfig": {
    "watch": ["src"],
    "ext": "ts",
    "ignore": ["src/**/*.spec.ts", "src/**/*.test.ts"],
    "exec": "ts-node src/app.ts"
  }
}
